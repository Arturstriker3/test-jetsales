{
  "manifest_version": 3,
  "name": "Jet-X",
  "description": "Facilita a interação dos atendentes com o chatbot da Jet Sales.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.jetsalesbrasil.com/home/"],
      "js": ["src/content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}